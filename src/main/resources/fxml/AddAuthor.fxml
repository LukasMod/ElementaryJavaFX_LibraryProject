<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.my.library.controllers.AuthorController">
   <children>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" spacing="20.0">
         <children>
            <Label text="%name.author" />
            <TextField fx:id="nameTextField" />
            <Label text="%surname.author" />
            <TextField fx:id="surnameTextField" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addAuthorOnAction" text="%add.button" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <TableView fx:id="authorTableView" editable="true" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true">
        <columns>
          <TableColumn fx:id="nameColumn" maxWidth="500.0" minWidth="-1.0" onEditCommit="#onEditCommitName" prefWidth="500.0" text="%name.author" />
          <TableColumn fx:id="surnameColumn" maxWidth="500.0" minWidth="-1.0" onEditCommit="#onEditCommitSurname" prefWidth="500.0" text="%surname.author" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
