<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="pl.my.library.controllers.ListBooksController" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" spacing="10.0">
         <children>
            <Label text="%author.book" />
            <ComboBox prefWidth="150.0" />
            <Label text="Label" />
            <ComboBox prefWidth="150.0" promptText="%category.book" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <TableView prefHeight="400.0" prefWidth="200.0">
        <columns>
          <TableColumn prefWidth="75.0" text="%title.book" />
          <TableColumn prefWidth="75.0" text="%desc.book" />
           <TableColumn prefWidth="75.0" text="%author.book" />
           <TableColumn prefWidth="75.0" text="%category.book" />
           <TableColumn prefWidth="75.0" text="%rating.book" />
           <TableColumn prefWidth="75.0" text="%isbn.book" />
           <TableColumn prefWidth="75.0" text="%release.book" />

        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
